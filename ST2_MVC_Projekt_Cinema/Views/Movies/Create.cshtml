@model Movie

@{
    ViewData["Title"] = "Dodaj nowy film";
}
 
<h1>Dodaj film</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Tytuł</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary m-1">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary m-1">Anuluj</a>
</form>